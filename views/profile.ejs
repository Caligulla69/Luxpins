<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Luxpins - Premium Visual Discovery</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              "blue-ncs": "#0094C6",
              "blue-premium": "#007AA3",
              "lapis-lazuli": "#005E7C",
              "deep-teal": "#004C63",
              "oxford-blue": "#000022",
              "soft-navy": "#0A0A2A",
              "rich-black": "#040F16",
              "rich-black-premium": "#0D1A22",
              "penn-blue": "#001242",
              "penn-blue-premium": "#0A1C3C",
            },
            animation: {
              "float-gentle": "floatGentle 6s ease-in-out infinite",
              "glow-pulse": "glowPulse 3s ease-in-out infinite",
              "slide-up": "slideUp 0.6s ease-out",
              "fade-in": "fadeIn 0.8s ease-out",
              "scale-in": "scaleIn 0.5s ease-out",
              shimmer: "shimmer 2s linear infinite",
            },
            keyframes: {
              floatGentle: {
                "0%, 100%": { transform: "translateY(0px)" },
                "50%": { transform: "translateY(-10px)" },
              },
              glowPulse: {
                "0%, 100%": { boxShadow: "0 0 20px rgba(0, 148, 198, 0.3)" },
                "50%": { boxShadow: "0 0 40px rgba(0, 148, 198, 0.6)" },
              },
              slideUp: {
                "0%": { transform: "translateY(30px)", opacity: "0" },
                "100%": { transform: "translateY(0)", opacity: "1" },
              },
              fadeIn: {
                "0%": { opacity: "0" },
                "100%": { opacity: "1" },
              },
              scaleIn: {
                "0%": { transform: "scale(0.9)", opacity: "0" },
                "100%": { transform: "scale(1)", opacity: "1" },
              },
              shimmer: {
                "0%": { backgroundPosition: "-200% 0" },
                "100%": { backgroundPosition: "200% 0" },
              },
            },
          },
        },
      };
    </script>
    <style>
      .glass-morphism {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.2);
      }

      .premium-gradient {
        background: linear-gradient(
          135deg,
          #000022 0%,
          #0a0a2a 25%,
          #001242 50%,
          #0094c6 100%
        );
        position: relative;
        overflow: hidden;
      }

      .premium-gradient::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: radial-gradient(
            circle at 20% 80%,
            rgba(0, 148, 198, 0.2) 0%,
            transparent 50%
          ),
          radial-gradient(
            circle at 80% 20%,
            rgba(0, 122, 163, 0.15) 0%,
            transparent 40%
          ),
          radial-gradient(
            circle at 40% 40%,
            rgba(0, 94, 124, 0.1) 0%,
            transparent 30%
          );
      }

      .hover-lift:hover {
        transform: translateY(-8px);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      }

      .masonry-grid {
        column-count: 2;
        column-gap: 1rem;
      }

      @media (min-width: 640px) {
        .masonry-grid {
          column-count: 3;
        }
      }

      @media (min-width: 768px) {
        .masonry-grid {
          column-count: 4;
        }
      }

      @media (min-width: 1024px) {
        .masonry-grid {
          column-count: 5;
        }
      }

      .masonry-item {
        break-inside: avoid;
        margin-bottom: 1rem;
        position: relative;
        overflow: hidden;
        border-radius: 1rem;
        transition: all 0.3s ease;
      }

      .masonry-item:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0, 148, 198, 0.2);
      }

      .premium-btn {
        background: linear-gradient(135deg, #0094c6 0%, #007aa3 100%);
        position: relative;
        overflow: hidden;
      }

      .premium-btn::before {
        content: "";
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(
          90deg,
          transparent,
          rgba(255, 255, 255, 0.3),
          transparent
        );
        transition: left 0.6s;
      }

      .premium-btn:hover::before {
        left: 100%;
      }

      .stats-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(15px);
        border: 1px solid rgba(255, 255, 255, 0.1);
      }

      .floating-elements {
        position: absolute;
        width: 100%;
        height: 100%;
        pointer-events: none;
      }

      .floating-shape {
        position: absolute;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        animation: floatGentle 8s ease-in-out infinite;
      }

      .modern-input {
        background: rgba(255, 255, 255, 0.05);
        border: 2px solid rgba(0, 148, 198, 0.2);
        backdrop-filter: blur(10px);
        transition: all 0.3s ease;
      }

      .modern-input:focus {
        background: rgba(255, 255, 255, 0.1);
        border-color: #0094c6;
        box-shadow: 0 0 0 4px rgba(0, 148, 198, 0.1);
      }
    </style>
  </head>
  <body class="bg-gray-50 text-gray-900 font-sans">
    <!-- Main Profile Page -->
    <div id="profilePage" class="min-h-screen">
      <%- include('navbar') %>
      <!-- Profile Header -->
      <div class="relative premium-gradient h-80 sm:h-96">
        <!-- Floating background elements -->
        <div class="floating-elements">
          <div
            class="floating-shape w-24 h-24 top-20 right-20"
            style="animation-delay: 0s"
          ></div>
          <div
            class="floating-shape w-16 h-16 bottom-32 left-16"
            style="animation-delay: 1s"
          ></div>
          <div
            class="floating-shape w-12 h-12 top-1/2 left-1/3"
            style="animation-delay: 2s"
          ></div>
        </div>

        <div
          class="absolute inset-0 bg-gradient-to-b from-transparent to-black/20 z-10"
        ></div>

        <div class="absolute inset-0 flex items-end justify-center pb-8 z-20">
          <div class="text-center animate-fade-in">
            <div class="relative mb-8">
              <div class="w-40 h-40 sm:w-48 sm:h-48 mx-auto relative">
                <div
                  class="w-full h-full rounded-full border-4 border-white shadow-2xl overflow-hidden backdrop-blur-sm animate-glow-pulse z-50"
                >
                  <img
                    src="<%= user.profileImage %>"
                    alt="Profile"
                    class="w-full h-full object-cover"
                  />
                </div>
                <!-- Edit Profile Icon -->
                <button
                  onclick="showEditProfile()"
                  class="absolute -bottom-3 -right-3 w-12 h-12 bg-blue-ncs rounded-2xl shadow-xl flex items-center justify-center hover:bg-blue-premium transition-all duration-300 group animate-float-gentle"
                >
                  <svg
                    class="w-6 h-6 text-white group-hover:scale-110 transition-transform"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                    />
                  </svg>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Profile Info -->
      <div class="max-w-5xl mx-auto px-4 -mt-24 relative z-10">
        <div
          class="bg-white rounded-3xl shadow-2xl p-8 sm:p-12 text-center animate-slide-up"
        >
          <h1
            class="text-4xl sm:text-5xl font-bold text-blue-ncs mb-3 animate-fade-in"
          >
            <%= user.username %>
          </h1>
          
          <p
            class="text-blue-ncs max-w-3xl mx-auto mb-10 leading-relaxed text-lg animate-fade-in"
            style="animation-delay: 0.3s"
          >
            <% if (user.bio) { %>
              <%= user.bio %>
            <% } else { %>
              Crafting visual narratives that inspire and captivate. Passionate about luxury design, modern aesthetics, and the intersection of art and technology.
            <% } %>
          </p>

          <!-- Stats -->
          <div
            class="flex flex-wrap justify-center gap-8 mb-10 animate-fade-in"
            style="animation-delay: 0.4s"
          >
            <div class="stats-card rounded-2xl p-6 min-w-[120px]">
              <div class="text-3xl sm:text-4xl font-bold text-blue-ncs mb-2">
                247
              </div>
              <div
                class="text-sm text-black/60 uppercase tracking-wider font-medium"
              >
                Boards
              </div>
            </div>
            <div class="stats-card rounded-2xl p-6 min-w-[120px]">
              <div class="text-3xl sm:text-4xl font-bold text-blue-ncs mb-2">
                12.8k
              </div>
              <div
                class="text-sm text-black/60 uppercase tracking-wider font-medium"
              >
                Pins
              </div>
            </div>
            <div class="stats-card rounded-2xl p-6 min-w-[120px]">
              <div class="text-3xl sm:text-4xl font-bold text-blue-ncs mb-2">
                45.2k
              </div>
              <div
                class="text-sm text-black/60 uppercase tracking-wider font-medium"
              >
                Followers
              </div>
            </div>
          </div>

          <!-- Action Buttons -->
          <div
            class="flex flex-wrap justify-center gap-4 animate-fade-in"
            style="animation-delay: 0.5s"
          >
            <button
              class="premium-btn px-8 py-4 text-white font-semibold rounded-2xl hover:shadow-xl transition-all duration-300 relative"
            >
              <span class="relative z-10">Follow</span>
            </button>
            <button
              class="px-8 py-4 border-2 border-white/30 text-blue-ncs font-semibold rounded-2xl hover:border-white hover:bg-white/10 backdrop-blur-sm transition-all duration-300"
            >
              Message
            </button>
            <a
              href="/postUpload"
              class="px-8 py-4 bg-white text-blue-ncs font-semibold rounded-2xl hover:bg-gray-100 transition-all duration-300 flex items-center space-x-2"
            >
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 6v6m0 0v6m0-6h6m-6 0H6"
                />
              </svg>
              <span>Create Pin</span>
            </a>
          </div>
        </div>
      </div>

      <!-- Boards Section -->
      <div class="max-w-7xl mx-auto px-4 py-20">
        <!-- Header -->
        <div
          class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-6 mb-12"
        >
          <h2 class="text-3xl sm:text-4xl font-bold text-rich-black">
            Curated Collections
          </h2>
          <div class="flex flex-wrap gap-3">
            <button
              class="px-6 py-3 bg-blue-ncs text-white rounded-2xl shadow-lg hover:bg-blue-premium transition-all duration-300 font-medium"
            >
              All
            </button>
            <button
              class="px-6 py-3 bg-white text-gray-700 rounded-2xl shadow-md hover:shadow-lg hover:text-blue-ncs transition-all duration-300 font-medium"
            >
              Fashion
            </button>
            <button
              class="px-6 py-3 bg-white text-gray-700 rounded-2xl shadow-md hover:shadow-lg hover:text-blue-ncs transition-all duration-300 font-medium"
            >
              Design
            </button>
            <button
              class="px-6 py-3 bg-white text-gray-700 rounded-2xl shadow-md hover:shadow-lg hover:text-blue-ncs transition-all duration-300 font-medium"
            >
              Architecture
            </button>
          </div>
        </div>

        <!-- Masonry Grid -->
        <div class="masonry-grid">
          <% if (user.posts && user.posts.length > 0) { %>
            <% user.posts.forEach(function(post, index) { %>
            <div class="masonry-item hover-lift animate-scale-in">
              <div class="relative overflow-hidden rounded-2xl shadow-xl group">
                <img
                  src="<%= post.image %>"
                  alt="<%= post.title %>"
                  class="w-full object-cover transition-transform duration-500 group-hover:scale-110"
                />
                <!-- Enhanced Overlay -->
                <div
                  class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-300"
                >
                  <div class="absolute bottom-0 left-0 right-0 p-6">
                    <h3 class="text-white font-bold text-lg mb-2">
                      <% if (post.board && post.board.name) { %>
                        <%= post.board.name %>
                      <% } else { %>
                        <%= post.title %>
                      <% } %>
                    </h3>
                    <div class="flex items-center justify-between">
                      <div
                        class="flex items-center space-x-4 text-white/80 text-sm"
                      >
                        <span class="flex items-center space-x-1">
                          <svg
                            class="w-4 h-4"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                          >
                            <path
                              d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z"
                            />
                          </svg>
                          <span>234</span>
                        </span>
                        <span class="flex items-center space-x-1">
                          <svg
                            class="w-4 h-4"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
                            />
                          </svg>
                          <span>67</span>
                        </span>
                      </div>
                      <button
                        class="w-10 h-10 bg-blue-ncs rounded-full flex items-center justify-center hover:bg-blue-premium transition-colors"
                      >
                        <svg
                          class="w-5 h-5 text-white"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"
                          />
                        </svg>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% }); %>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Enhanced Edit Profile Modal -->
    <div
      id="editProfileModal"
      class="fixed inset-0 bg-black/60 backdrop-blur-md z-50 hidden flex items-center justify-center p-4"
    >
      <div
        class="glass-morphism rounded-3xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-hidden animate-scale-in"
      >
        <!-- Modal Header -->
        <div
          class="bg-gradient-to-r from-blue-ncs to-blue-premium p-6 text-white"
        >
          <div class="flex justify-between items-center">
            <h2 class="text-2xl font-bold">Edit Profile</h2>
            <button
              onclick="hideEditProfile()"
              class="p-2 hover:bg-white/20 rounded-xl transition-colors"
            >
              <svg
                class="w-6 h-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M6 18L18 6M6 6l12 12"
                />
              </svg>
            </button>
          </div>
        </div>

        <!-- Form -->
        <form
          id="editProfileForm"
          action="/updateProfile"
          method="POST"
          enctype="multipart/form-data"
        >
          <!-- Modal Body -->
          <div class="p-6 space-y-6 max-h-[60vh] overflow-y-auto">
            <!-- Profile Picture -->
            <div class="text-center">
              <div class="relative inline-block">
                <div class="w-32 h-32 mx-auto mb-6">
                  <img
                    id="profilePreview"
                    src="<%= user.profileImage %>"
                    alt="Profile Preview"
                    class="w-full h-full rounded-full object-cover border-4 border-blue-ncs/30"
                  />
                </div>
                <label
                  for="profileImageInput"
                  class="absolute -bottom-2 -right-2 w-12 h-12 bg-blue-ncs rounded-2xl flex items-center justify-center cursor-pointer hover:bg-blue-premium transition-colors shadow-xl"
                >
                  <svg
                    class="w-5 h-5 text-white"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 6v6m0 0v6m0-6h6m-6 0H6"
                    />
                  </svg>
                </label>
                <input
                  type="file"
                  id="profileImageInput"
                  name="profileImage"
                  accept="image/*"
                  class="hidden"
                  onchange="previewImage(this)"
                />
              </div>
              <p class="text-sm text-white/60">
                Click the + icon to change your profile picture
              </p>
            </div>

            <!-- Form Fields -->
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-semibold text-white mb-3">Username</label>
                <input
                  type="text"
                  id="username"
                  name="username"
                  value="<%= user.username %>"
                  class="w-full px-4 py-3 modern-input rounded-xl text-white placeholder-white/50 focus:outline-none"
                  required
                />
              </div>
             
            </div>

            <div>
              <label class="block text-sm font-semibold text-white mb-3">Bio</label>
              <textarea
                id="bio"
                name="bio"
                rows="4"
                class="w-full px-4 py-3 modern-input rounded-xl text-white placeholder-white/50 focus:outline-none resize-none"
                placeholder="Tell us about yourself..."><% if (user.bio) { %><%= user.bio %><% } %></textarea>
            </div>
          </div>

          <!-- Modal Footer -->
          <div class="p-6 border-t border-white/10 flex gap-4">
            <button
              type="button"
              onclick="hideEditProfile()"
              class="flex-1 px-6 py-3 border-2 border-white/30 text-white font-semibold rounded-xl hover:bg-white/10 transition-all"
            >
              Cancel
            </button>
            <button
              type="submit"
              class="flex-1 px-6 py-3 premium-btn text-white font-semibold rounded-xl hover:shadow-xl transition-all relative"
            >
              <span class="relative z-10">Save Changes</span>
            </button>
          </div>
        </form>
      </div>
    </div>

    <script>
      function showEditProfile() {
        document.getElementById("editProfileModal").classList.remove("hidden");
        document.body.style.overflow = "hidden";
      }

      function hideEditProfile() {
        document.getElementById("editProfileModal").classList.add("hidden");
        document.body.style.overflow = "auto";
      }

      function previewImage(input) {
        if (input.files && input.files[0]) {
          const reader = new FileReader();
          reader.onload = function (e) {
            document.getElementById("profilePreview").src = e.target.result;
          };
          reader.readAsDataURL(input.files[0]);
        }
      }

      // Close modal when clicking outside
      document
        .getElementById("editProfileModal")
        .addEventListener("click", function (e) {
          if (e.target === this) {
            hideEditProfile();
          }
        });

      // Handle escape key
      document.addEventListener("keydown", function (e) {
        if (e.key === "Escape") {
          hideEditProfile();
        }
      });

      // Add scroll animations
      const observerOptions = {
        threshold: 0.1,
        rootMargin: "0px 0px -50px 0px",
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.style.opacity = "1";
            entry.target.style.transform = "translateY(0)";
          }
        });
      }, observerOptions);

      // Observe masonry items for scroll animations
      setTimeout(() => {
        document.querySelectorAll(".masonry-item").forEach((item) => {
          observer.observe(item);
        });
      }, 100);
    </script>
  </body>
</html>