<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign Up | Luxpins</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
        theme: {
            extend: {
                colors: {
                    'blue-ncs': '#0094C6',
                    'blue-premium': '#007AA3',
                    'lapis-lazuli': '#005E7C',
                    'deep-teal': '#004C63',
                    'oxford-blue': '#000022',
                    'soft-navy': '#0A0A2A',
                    'rich-black': '#040F16',
                    'rich-black-premium': '#0D1A22',
                    'penn-blue': '#001242',
                    'penn-blue-premium': '#0A1C3C'
                },
                animation: {
                    'float-slow': 'floatSlow 8s ease-in-out infinite',
                    'float-fast': 'floatFast 4s ease-in-out infinite',
                    'pulse-glow': 'pulseGlow 3s ease-in-out infinite',
                    'slide-in-right': 'slideInRight 0.8s ease-out',
                    'slide-in-left': 'slideInLeft 0.8s ease-out',
                    'fade-in-up': 'fadeInUp 0.6s ease-out',
                    'bounce-gentle': 'bounceGentle 2s ease-in-out infinite',
                    'rotate-slow': 'rotateSlow 20s linear infinite'
                },
                keyframes: {
                    floatSlow: {
                        '0%, 100%': { transform: 'translateY(0px) rotate(0deg)' },
                        '50%': { transform: 'translateY(-20px) rotate(5deg)' }
                    },
                    floatFast: {
                        '0%, 100%': { transform: 'translateY(0px) translateX(0px)' },
                        '25%': { transform: 'translateY(-10px) translateX(5px)' },
                        '75%': { transform: 'translateY(10px) translateX(-5px)' }
                    },
                    pulseGlow: {
                        '0%, 100%': { 
                            boxShadow: '0 0 30px rgba(0, 148, 198, 0.3)',
                            transform: 'scale(1)'
                        },
                        '50%': { 
                            boxShadow: '0 0 60px rgba(0, 148, 198, 0.6)',
                            transform: 'scale(1.05)'
                        }
                    },
                    slideInRight: {
                        '0%': { transform: 'translateX(100px)', opacity: '0' },
                        '100%': { transform: 'translateX(0)', opacity: '1' }
                    },
                    slideInLeft: {
                        '0%': { transform: 'translateX(-100px)', opacity: '0' },
                        '100%': { transform: 'translateX(0)', opacity: '1' }
                    },
                    fadeInUp: {
                        '0%': { transform: 'translateY(30px)', opacity: '0' },
                        '100%': { transform: 'translateY(0)', opacity: '1' }
                    },
                    bounceGentle: {
                        '0%, 100%': { transform: 'translateY(0)' },
                        '50%': { transform: 'translateY(-10px)' }
                    },
                    rotateSlow: {
                        '0%': { transform: 'rotate(0deg)' },
                        '100%': { transform: 'rotate(360deg)' }
                    }
                }
            }
        }
    }
  </script>
  <style>
    .split-gradient-left {
        background: linear-gradient(135deg, #0094C6 0%, #007AA3 50%, #005E7C 100%);
        position: relative;
        overflow: hidden;
    }
    
    .split-gradient-left::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: radial-gradient(circle at 30% 70%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
                    radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.08) 0%, transparent 40%);
    }
    
    .modern-input {
        background: rgba(255, 255, 255, 0.05);
        border: 2px solid rgba(0, 148, 198, 0.2);
        backdrop-filter: blur(10px);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .modern-input:focus {
        background: rgba(255, 255, 255, 0.1);
        border-color: #0094C6;
        box-shadow: 0 0 0 4px rgba(0, 148, 198, 0.1), 0 10px 40px rgba(0, 148, 198, 0.2);
        transform: translateY(-2px);
    }
    
    .modern-input::placeholder {
        color: rgba(255, 255, 255, 0.6);
    }
    
    .premium-btn {
        background: linear-gradient(135deg, #0094C6 0%, #007AA3 100%);
        box-shadow: 0 10px 30px rgba(0, 148, 198, 0.3);
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
    }
    
    .premium-btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.6s;
    }
    
    .premium-btn:hover::before {
        left: 100%;
    }
    
    .premium-btn:hover {
        box-shadow: 0 15px 40px rgba(0, 148, 198, 0.4);
        transform: translateY(-2px);
    }
    
    .floating-shape {
        position: absolute;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(20px);
    }
    
    .geometric-pattern {
        position: absolute;
        width: 100%;
        height: 100%;
        opacity: 0.1;
        background-image: 
            radial-gradient(circle at 25% 25%, rgba(255, 255, 255, 0.2) 0%, transparent 50%),
            radial-gradient(circle at 75% 75%, rgba(255, 255, 255, 0.1) 0%, transparent 40%);
    }
    
    .text-gradient {
        background: linear-gradient(135deg, #ffffff 0%, rgba(255, 255, 255, 0.8) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .profile-preview {
        background: rgba(255, 255, 255, 0.05);
        border: 2px solid rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(20px);
    }

    .avatar-preview {
        background: rgba(255, 255, 255, 0.1);
        border: 2px solid rgba(0, 148, 198, 0.3);
        backdrop-filter: blur(10px);
    }

    .stats-card {
        background: rgba(255, 255, 255, 0.08);
        border: 1px solid rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(15px);
    }

    @media (max-width: 1024px) {
        .split-container {
            grid-template-columns: 1fr;
        }
        .left-panel {
            min-height: 40vh;
            order: 2;
        }
        .right-panel {
            order: 1;
        }
    }
  </style>
</head>
<body class="min-h-screen font-sans">
  <div class="split-container grid lg:grid-cols-5 min-h-screen">
    <!-- Left Panel - Visual Side -->
    <div class="left-panel lg:col-span-2 split-gradient-left flex flex-col justify-center items-center p-8 lg:p-12 relative animate-slide-in-left">
      <!-- Floating geometric shapes -->
      <div class="floating-shape w-32 h-32 top-20 right-20 animate-float-slow"></div>
      <div class="floating-shape w-20 h-20 bottom-32 left-16 animate-float-fast" style="animation-delay: 1s;"></div>
      <div class="floating-shape w-16 h-16 top-1/2 left-1/4 animate-bounce-gentle" style="animation-delay: 2s;"></div>
      <div class="floating-shape w-12 h-12 top-1/3 right-1/3 animate-rotate-slow opacity-60"></div>
      
      <div class="geometric-pattern"></div>
      
      <!-- Main content -->
      <div class="relative z-10 text-center max-w-md">
        <div class="mb-8">
          <div class="w-20 h-20 bg-white/20 rounded-2xl backdrop-blur-lg mx-auto mb-6 flex items-center justify-center">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
            </svg>
          </div>
          <h1 class="text-5xl lg:text-6xl font-bold text-gradient mb-4">LUXPINS</h1>
        </div>
        
        <h2 class="text-3xl lg:text-4xl font-bold text-white mb-4 animate-fade-in-up" style="animation-delay: 0.3s;">
          Join the Community
        </h2>
        
        <p class="text-lg text-white/80 mb-8 leading-relaxed animate-fade-in-up" style="animation-delay: 0.5s;">
          Create your premium account and start building your visual collection. Connect with creators worldwide.
        </p>
        
        <!-- Live Profile Preview -->
        <div id="livePreview" class="profile-preview rounded-2xl p-6 mb-8 animate-fade-in-up" style="animation-delay: 0.7s;">
          <div class="mb-4">
            <div id="avatarPreview" class="avatar-preview w-16 h-16 rounded-2xl mx-auto flex items-center justify-center overflow-hidden">
              <svg class="w-8 h-8 text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
          </div>
          <h3 id="previewName" class="font-bold text-white mb-1">@username</h3>
          <p id="previewEmail" class="text-white/60 text-sm mb-3">email@example.com</p>
          <p id="previewBio" class="text-white/80 text-sm leading-relaxed min-h-[1rem]"></p>
          
          <div class="flex justify-center space-x-6 mt-4 pt-4 border-t border-white/10">
            <div class="stats-card rounded-lg px-3 py-2">
              <div class="text-sm font-bold text-white">0</div>
              <div class="text-xs text-white/60">Pins</div>
            </div>
            <div class="stats-card rounded-lg px-3 py-2">
              <div class="text-sm font-bold text-white">0</div>
              <div class="text-xs text-white/60">Boards</div>
            </div>
            <div class="stats-card rounded-lg px-3 py-2">
              <div class="text-sm font-bold text-white">0</div>
              <div class="text-xs text-white/60">Following</div>
            </div>
          </div>
        </div>
        
        <div class="flex items-center justify-center space-x-6 text-white/60 animate-fade-in-up" style="animation-delay: 0.9s;">
          <div class="flex items-center space-x-2">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span class="text-xs">Free Forever</span>
          </div>
          <div class="flex items-center space-x-2">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span class="text-xs">No Ads</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Panel - Form Side -->
    <div class="right-panel lg:col-span-3 bg-white flex items-center justify-center p-8 lg:p-12 animate-slide-in-right">
      <div class="w-full max-w-2xl">
        <!-- Header -->
        <div class="mb-10">
          <h3 class="text-3xl font-bold text-rich-black mb-2">Create Account</h3>
          <p class="text-gray-600">Join thousands of creators on Luxpins</p>
        </div>

        <!-- Form -->
        <form id="signupForm" action="/register" method="POST" class="space-y-6">
          <!-- Username & Email Row -->
          <div class="grid md:grid-cols-2 gap-6 animate-fade-in-up" style="animation-delay: 0.2s;">
            <div>
              <label class="block text-sm font-semibold text-rich-black mb-3">Username</label>
              <div class="relative">
                <input 
                  id="username"
                  type="text" 
                  name="username" 
                  placeholder="your_username"
                  class="w-full px-6 py-4 modern-input rounded-2xl text-rich-black font-medium placeholder:font-normal focus:outline-none"
                  required 
                  minlength="3"
                />
                <div class="absolute inset-y-0 right-0 flex items-center pr-6">
                  <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
              </div>
            </div>
            
            <div>
              <label class="block text-sm font-semibold text-rich-black mb-3">Email</label>
              <div class="relative">
                <input 
                  id="email"
                  type="email" 
                  name="email" 
                  placeholder="you@example.com"
                  class="w-full px-6 py-4 modern-input rounded-2xl text-rich-black font-medium placeholder:font-normal focus:outline-none"
                  required 
                />
                <div class="absolute inset-y-0 right-0 flex items-center pr-6">
                  <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
                  </svg>
                </div>
              </div>
            </div>
          </div>

          <!-- Password Row -->
          <div class="grid md:grid-cols-2 gap-6 animate-fade-in-up" style="animation-delay: 0.3s;">
            <div>
              <label class="block text-sm font-semibold text-rich-black mb-3">Password</label>
              <div class="relative">
                <input 
                  id="password"
                  type="password" 
                  name="password" 
                  placeholder="Create a password"
                  class="w-full px-6 py-4 modern-input rounded-2xl text-rich-black font-medium placeholder:font-normal focus:outline-none"
                  required 
                  minlength="6"
                />
                <div class="absolute inset-y-0 right-0 flex items-center pr-6">
                  <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                  </svg>
                </div>
              </div>
              <p class="text-xs text-gray-500 mt-2">At least 6 characters</p>
            </div>
            
            <div>
              <label class="block text-sm font-semibold text-rich-black mb-3">Confirm Password</label>
              <div class="relative">
                <input 
                  id="confirmPassword"
                  type="password" 
                  name="confirmPassword" 
                  placeholder="Repeat password"
                  class="w-full px-6 py-4 modern-input rounded-2xl text-rich-black font-medium placeholder:font-normal focus:outline-none"
                  required 
                />
                <div class="absolute inset-y-0 right-0 flex items-center pr-6">
                  <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
              </div>
              <div id="pwMsg" class="text-xs mt-2"></div>
            </div>
          </div>

          <!-- Profile Image -->
          <div class="animate-fade-in-up" style="animation-delay: 0.4s;">
            <label class="block text-sm font-semibold text-rich-black mb-3">Profile Image URL (Optional)</label>
            <div class="relative">
              <input 
                id="profileImage"
                type="text" 
                name="profileImage" 
                placeholder="https://example.com/your-photo.jpg"
                class="w-full px-6 py-4 modern-input rounded-2xl text-rich-black font-medium placeholder:font-normal focus:outline-none"
              />
              <div class="absolute inset-y-0 right-0 flex items-center pr-6">
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
            </div>
            <p class="text-xs text-gray-500 mt-2">Paste a public image URL for your avatar</p>
          </div>

          <!-- Bio -->
          <div class="animate-fade-in-up" style="animation-delay: 0.5s;">
            <label class="block text-sm font-semibold text-rich-black mb-3">Bio (Optional)</label>
            <textarea
              id="bio"
              name="bio"
              rows="3"
              placeholder="Tell people a little about yourself..."
              class="w-full px-6 py-4 modern-input rounded-2xl text-rich-black font-medium placeholder:font-normal focus:outline-none resize-none"
            ></textarea>
          </div>

          <!-- Error Message -->
          <div id="formFeedback" class="hidden"></div>

          <!-- Terms & Submit -->
          <div class="space-y-6 animate-fade-in-up" style="animation-delay: 0.6s;">
            <label class="flex items-start space-x-4">
              <input 
                type="checkbox" 
                id="terms" 
                class="w-5 h-5 text-blue-ncs bg-gray-100 border-gray-300 rounded-lg focus:ring-blue-ncs focus:ring-2 mt-1"
                required
              >
              <span class="text-sm text-gray-600 leading-relaxed">
                I agree to the <a href="/terms" class="font-semibold text-blue-ncs hover:text-blue-premium transition-colors">Terms of Service</a> 
                and <a href="/privacy" class="font-semibold text-blue-ncs hover:text-blue-premium transition-colors">Privacy Policy</a>
              </span>
            </label>
            
            <button 
              type="submit" 
              id="submitBtn"
              class="w-full py-4 px-6 premium-btn text-white font-semibold rounded-2xl transition-all relative"
            >
              <span class="relative z-10">Create Your Luxpins Account</span>
            </button>
          </div>

          <!-- Login Link -->
          <p class="text-center text-gray-600 animate-fade-in-up" style="animation-delay: 0.7s;">
            Already have an account? 
            <a href="/login" class="font-semibold text-blue-ncs hover:text-blue-premium transition-colors ml-1">
              Sign in here
            </a>
          </p>
        </form>
      </div>
    </div>
  </div>

  <script>
    // Form elements
    const usernameInput = document.getElementById("username");
    const emailInput = document.getElementById("email");
    const profileImageInput = document.getElementById("profileImage");
    const bioInput = document.getElementById("bio");
    const passwordInput = document.getElementById("password");
    const confirmInput = document.getElementById("confirmPassword");
    const pwMsg = document.getElementById("pwMsg");
    
    // Preview elements
    const avatarPreview = document.getElementById("avatarPreview");
    const previewName = document.getElementById("previewName");
    const previewEmail = document.getElementById("previewEmail");
    const previewBio = document.getElementById("previewBio");
    
    const form = document.getElementById("signupForm");
    const submitBtn = document.getElementById("submitBtn");
    const feedback = document.getElementById("formFeedback");

    // Avatar preview function
    function setAvatar(url) {
      if (!url) {
        avatarPreview.innerHTML = `
          <svg class="w-8 h-8 text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
        `;
        return;
      }

      const img = new Image();
      img.onload = () => {
        avatarPreview.innerHTML = "";
        img.className = "w-full h-full object-cover rounded-2xl";
        avatarPreview.appendChild(img);
      };
      img.onerror = () => {
        avatarPreview.innerHTML = `
          <div class="text-center text-red-300 text-xs p-2">
            <svg class="w-6 h-6 mx-auto mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Invalid URL
          </div>
        `;
      };
      img.src = url;
    }

    // Live preview updates
    profileImageInput.addEventListener("input", (e) => {
      setAvatar(e.target.value.trim());
    });

    usernameInput.addEventListener("input", () => {
      const username = usernameInput.value.trim();
      previewName.textContent = username ? `@${username}` : "@username";
    });

    emailInput.addEventListener("input", () => {
      previewEmail.textContent = emailInput.value.trim() || "email@example.com";
    });

    bioInput.addEventListener("input", () => {
      const bio = bioInput.value.trim();
      previewBio.textContent = bio || "";
      previewBio.style.display = bio ? 'block' : 'none';
    });

    // Password validation
    function checkPasswords() {
      const pw = passwordInput.value;
      const cpw = confirmInput.value;
      if (!cpw) {
        pwMsg.textContent = "";
        return false;
      }
      if (pw === cpw) {
        pwMsg.textContent = "✓ Passwords match";
        pwMsg.className = "text-xs mt-2 text-green-600 font-medium";
        return true;
      } else {
        pwMsg.textContent = "✗ Passwords do not match";
        pwMsg.className = "text-xs mt-2 text-red-500 font-medium";
        return false;
      }
    }

    passwordInput.addEventListener("input", checkPasswords);
    confirmInput.addEventListener("input", checkPasswords);

    // Form validation
    form.addEventListener("submit", (e) => {
      if (!checkPasswords() && confirmInput.value) {
        e.preventDefault();
        showFeedback("Passwords do not match", "error");
        return;
      }
    });

    function showFeedback(message, type) {
      feedback.className = `p-4 rounded-2xl text-sm font-medium animate-fade-in-up ${
        type === "error" 
          ? "bg-red-50 border border-red-200 text-red-700" 
          : "bg-green-50 border border-green-200 text-green-700"
      }`;
      feedback.textContent = message;
      feedback.classList.remove("hidden");
      
      setTimeout(() => {
        feedback.classList.add("hidden");
      }, 5000);
    }
  </script>
</body>
</html>